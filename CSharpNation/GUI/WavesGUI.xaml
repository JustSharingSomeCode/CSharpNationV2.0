<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSharpNation.GUI"
             xmlns:WpfHoverControls="clr-namespace:WpfHoverControls;assembly=WpfHoverControls" x:Name="WavesControl" x:Class="CSharpNation.GUI.WavesGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{StaticResource BackgroundColor}" Loaded="WavesControl_Loaded">
    <Grid x:Name="MainGrid">
        <WpfHoverControls:HoverScrollViewer x:Name="WavesViewer" Height="120" Margin="10,10,10,0" VerticalAlignment="Top" Background="#FF505050" CornerRadius="5" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="WavesViewerContent" Width="Auto">
                
            </Grid>
        </WpfHoverControls:HoverScrollViewer>
    </Grid>
</UserControl>
